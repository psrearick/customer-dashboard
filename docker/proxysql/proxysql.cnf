# ProxySQL Configuration File for Laravel Performance Testing

# Data directory
datadir="/var/lib/proxysql"

# Error log
errorlog="/var/lib/proxysql/proxysql.log"

# Admin interface
admin_variables=
{
    admin_credentials="admin:admin"
    mysql_ifaces="0.0.0.0:6032"
    refresh_interval=2000
    debug=true
}

# MySQL variables
mysql_variables=
{
    threads=4
    max_connections=2048
    default_query_delay=0
    default_query_timeout=36000000
    have_compress=true
    poll_timeout=2000
    interfaces="0.0.0.0:6033"
    default_schema="information_schema"
    stacksize=1048576
    server_version="8.4.0"
    connect_timeout_server=3000
    monitor_username="monitor"
    monitor_password="monitor"
    monitor_history=600000
    monitor_connect_interval=60000
    monitor_ping_interval=10000
    monitor_read_only_interval=1500
    monitor_read_only_timeout=500
    ping_interval_server_msec=120000
    ping_timeout_server=500
    commands_stats=true
    sessions_sort=true
    connect_retries_on_failure=10
}

# MySQL servers configuration (will be populated via API)
mysql_servers=
(
    {
        address="mysql"
        port=3306
        hostgroup=0
        status="ONLINE"
        weight=1000
        compression=0
        max_connections=1000
        max_replication_lag=10
        use_ssl=0
        max_latency_ms=0
        comment="Laravel MySQL Primary"
    }
)

# MySQL users configuration
mysql_users=
(
    {
        username="laravel"
        password="password"
        default_hostgroup=0
        max_connections=200
        default_schema="laravel_perf"
        active=1
    }
)

# Query rules for performance optimization
mysql_query_rules=
(
    {
        rule_id=1
        active=1
        match_digest="^SELECT.*FOR UPDATE$"
        destination_hostgroup=0
        apply=1
        comment="Route SELECT FOR UPDATE to primary"
    },
    {
        rule_id=2
        active=1
        match_digest="^SELECT"
        destination_hostgroup=0
        apply=1
        comment="Route SELECT queries to primary (no read replicas yet)"
    }
)

# Query cache configuration
mysql_query_rules_fast_routing=
(
    {
        username="laravel"
        schemaname="laravel_perf"
        flagIN=0
        destination_hostgroup=0
        comment="Laravel application routing"
    }
)
