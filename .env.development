# Application
APP_NAME="Customer Dashboard"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel_perf
DB_USERNAME=laravel
DB_PASSWORD=password

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache Configuration
CACHE_STORE=redis
CACHE_DATABASE_CONNECTION=null
CACHE_DATABASE_TABLE=cache
CACHE_PREFIX=laravel_perf

# Queue Configuration
QUEUE_CONNECTION=redis

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Broadcast & Filesystem
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Performance Testing Configuration
PERFORMANCE_PROFILE=development
ENABLE_XDEBUG=true
ENABLE_BLACKFIRE=false
ENABLE_XHPROF=true

# Xdebug Configuration
XDEBUG_MODE=develop,debug,profile
XDEBUG_CONFIG="client_host=host.docker.internal"

# Container Resource Limits (for testing consistency)
PHP_MEMORY_LIMIT=256M
PHP_MAX_WORKERS=10
MYSQL_BUFFER_POOL_SIZE=512M
REDIS_MAX_MEMORY=256mb

# Node.js Environment
NODE_ENV=development
VITE_HOST=0.0.0.0
VITE_PORT=5173
VITE_APP_NAME="${APP_NAME}"

# Octane Configuration (for Octane stack)
OCTANE_SERVER=swoole
OCTANE_HOST=0.0.0.0
OCTANE_PORT=8000
OCTANE_WORKERS=4
OCTANE_TASK_WORKERS=6
OCTANE_MAX_REQUESTS=500

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin

# Load Testing Configuration
ARTILLERY_TARGET=http://localhost
ARTILLERY_PHASES_DURATION=60
ARTILLERY_ARRIVAL_RATE=10

# Security
APP_CIPHER=AES-256-CBC
